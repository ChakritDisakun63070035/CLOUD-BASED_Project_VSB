                  <p>All Courses</p>
                </a>
                <a class="text-decoration-none text-dark" :href="'/allcourse/' + user.user_id + '/mycourse'">
                  <p>My Course</p>
                </a>
                <a class="text-decoration-none text-dark" :href="'/mycart/' + user.user_id">
                  <p>My cart</p>
                </a>
