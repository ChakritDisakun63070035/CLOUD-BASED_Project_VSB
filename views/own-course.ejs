                            <span><i class="bi bi-funnel"></i></span>
                            Filters
                        </a>

                        <ul class="dropdown-menu p-2" aria-labelledby="dropdownMenuLink">
                            <li>
                                <input class="form-check-input" type="radio" value="alpha" v-model="sorted" />
                                <label class="form-check-label" for="flexRadioDefault1">Sort by Alphabet </label>
                            </li>
                            <li>
                                <input class="form-check-input" type="radio" value="sortID" v-model="sorted" />
                                <label class="form-check-label" for="flexRadioDefault1">Sort by ID</label>
                            </li>
                            <li>
                                <input class="form-check-input" type="radio" value="price" v-model="sorted" />
                                <label class="form-check-label" for="flexRadioDefault1"> Sort by Price </label>
                            </li>
                        </ul>
                    </div>
                </div>






                <div class="row mt-5">
                    <h5>My Course</h5>
                </div>
                <div class="nocourse" v-if="computedCourses==0"> 
                    <h1> no course</h1>
             </div>
                <div class="row px-4" >
                
                    <div class="col-sm-12 col-md-6 col-xl-4 my-3" v-for="course in computedCourses" >
                        <a :href="'/course/' + course.course_id + '/' + course.user_id + '/learn'" class="card myAnim bg-light"
                            style="width: 20rem; text-decoration: none; color:black;">
                            <img :src="'/' + course.image" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title text-center"><b> {{ course.course_name }} </b></h5>
                                <p class="card-text text-center"> {{ course.course_info }} </p>
                                <div class="row">
                                    <div class="col-6 ">
                                        Courses price
                                    </div>
                                    <div class="col">

                                    </div>
                                    <div class="col text-danger">
                                        {{ course.course_price }}฿
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script>
        var app = new Vue({
            el: "#app",
            data: {
                data: JSON.parse(`<%- data %>`),
                users: JSON.parse(`<%- users %>`),
                sorted:" "
            },
            // computed: {
                computed: {
                    computedCourses() {
                        let results = this.users
                        return results.map((b) => {
                            if (b.course_info.length > 90) {
                                b.course_info = b.course_info.substring(0, 90) + "..."
                            }
                            return b
                        })
                    },
                    filteredTasks() {
                        function compareAlpha(a, b) {
                            if (a.course_name < b.course_name) {
                                return -1
                            } else if (a.course_name > b.course_name) {
                                return 1
                            } else {
                                return 0
                            }
                        }
                        function compareID(a, b) {
                            if (a.course_id < b.course_id) {
                                return -1
                            } else if (a.course_id > b.course_id) {
                                return 1
                            } else {
                                return 0
                            }
                        }
                        function comparePrice(a, b) {
                            if (a.course_price < b.course_price) {
                                return -1
                            } else if (a.course_price > b.course_price) {
                                return 1
                            } else {
                                return 0
                            }
                        }
                        if (this.sorted == "alpha") {
                            return this.users.sort(compareAlpha)
                        } else if (this.sorted == "sortID") {
                            return this.users.sort(compareID)
                        } else if (this.sorted == "price") {
                            return this.users.sort(comparePrice)
                        }
                    },
                },
            // },
        })
    </script>
