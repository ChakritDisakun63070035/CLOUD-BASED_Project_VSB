<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>VSB</title>
  <link rel="icon" href="/uploads/logo.png" />
  <link href="/css/bootstrap.css" rel="stylesheet" />
  <link href="/css/css.css" rel="stylesheet" />
  <script src="/js/bootstrap.bundle.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
</head>

<body>
  <div class="" id="app">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light" id="backgroud_nav">
        <div class="container-fluid" v-for="user in users">
          <a class="navbar-brand" :href="'/allcourse/' + user.user_id">
            <img src="/uploads/logo.png" alt="" width="60" height="60" />
          </a>
          <div class="d-flex">
            <a class="navbar-brand" :href="'/allcourse/' + user.user_id + '/mycourse'">
              <i class="bi bi-book fs-4"></i>
              My Course
            </a>
            <a class="navbar-brand text-decoration-underline" :href="'/mycart/' + user.user_id">
              <i class="bi bi-cart4 fs-4"></i>
              My Cart
            </a>
            <li class="nav dropdown">
              <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img :src="user.image" alt="" width="32" height="32" class="d-inline-block align-text-top" />
                {{user.user_fname}}
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                <li><a class="dropdown-item" :href="'/profile/' + user.user_id + '/'">Profile</a></li>
                <li><a class="dropdown-item" :href="'/sign-out/' + user.user_id">Logout</a></li>
              </ul>
            </li>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <h1 class="my-5 text-center">My Cart</h1>
      <div class="row" v-if="course != 0">
        <div class="col-12 my-3">
          <small class="text-secondary">{{idCounter}} Course in Cart</small>
        </div>
        <div class="col-6">
          <div class="row border-bottom my-3">
            <div class="col-6">
              <h6>PRODUCT</h6>
            </div>
            <div class="col-5 text-end">
              <h6>PRICES</h6>
            </div>
          </div>
          <div class="row my-4" v-for="item in items">
            <div class="col-5">
              <img :src="item.image" width="100%" />
            </div>
            <div class="col-5">
              <p>{{item.course_name}}</p>
            </div>
            <div class="col-1 text-end">
              <p>{{item.course_price}}฿</p>
            </div>
            <div class="col-1 text-end" v-for="user in users">
              <a :href="'/mycart/' + user.user_id + '/' + item.item_no + '/' + item.order_id">
                <i class="iconcart bi bi-trash text-danger"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card w-75 mx-auto bg-light">
            <h5 class="card-header bg-warning">Summary</h5>
            <div class="card-body">
              <div class="row my-2" v-for="item in items">
                <div class="col-5">
                  <img :src="item.image" width="100%" />
                </div>
                <div class="col-5">
                  <p>{{item.course_name}}</p>
                </div>
                <div class="col-2">
                  <p>{{item.course_price}}฿</p>
                </div>
              </div>
              <div class="row my-3">
                <div class="col-11 border-top mx-auto"></div>
              </div>
              <div class="row" v-for="cart in carts.slice(0,1)">
                <div class="col-8">Total cost</div>
                <div class="col-4 text-end">{{cart.price_total}}฿</div>
              </div>
              <div class="row" v-for="cart in carts">
                  <a :href="'/payment/'+ cart.user_id + '/' + cart.order_id" class="btn btn-warning col-11 mx-auto mt-3">Checkout Items</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row" v-if="course == 0">
        <div class="nocourse"  v-for="user in users">
          <h2>No item in your Cart</h2>
          <a class="btn btn-warning mt-3" :href="'/allcourse/' +
          user.user_id" role="button">Back to Course</a>
      </div>
      </div>
    </div>
  </div>
</body>
<script>
  var app = new Vue({
    el: "#app",
    data: {
      items: JSON.parse(`<%- items %>`),
      users: JSON.parse(`<%- users %>`),
      carts: JSON.parse(`<%- carts %>`),
      course: JSON.parse(`<%- course %>`),
      idCounter: 0,
    },
    created() {
      this.idCounter = this.items.length
    }
  })
</script>
