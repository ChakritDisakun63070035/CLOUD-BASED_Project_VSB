    <div class="row px-4">
      <div class="col-sm-12 col-md-6 col-xl-4 my-3" v-for="course in
          computedCourses">
        <a :href="'/allcourse/course/' + course.course_id" class="card myAnim
            bg-light" style="width: 20rem; text-decoration: none; color: black">
          <img :src="course.image" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title text-center">
              <b> {{ course.course_name }} </b>
            </h5>
            <p class="card-text text-center">{{ course.course_info }}</p>
            <div class="row">
              <div class="col-6">Courses price</div>
              <div class="col"></div>
              <div class="col text-danger">{{ course.course_price }}฿</div>
            </div>
