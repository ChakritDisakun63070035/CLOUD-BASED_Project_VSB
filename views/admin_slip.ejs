        <div class="container">
            <h1 class="mt-5 mb-5">CHECK</h1>
            <div v-for="info in data">
                <div class="row">
                    <div class="col-12 d-flex justify-content-center">
                        <div class="card mb-3" style="width: 1080px;">
                            <div class="row g-0">
                                <div class="col-md-5 d-flex justify-content-center">
                                    <img :src="info.payment_slip" class="card-img-top  p-2  " style="width: 50%; height: auto;" alt="no slip" />
                                </div>
                                <div class="col-md-7">
                                    <div class="card-body mb-5">
                                        <div class="row mt-5">

                                            <p>
                                                Order ID &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:
                                                &emsp;&emsp;&emsp;&emsp;{{info.order_id}}
                                            </p>


                                        </div>
                                        <div class="row">
                                            <p>
                                                User
                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&emsp;:
                                                &emsp;&emsp;&emsp;&emsp;{{info.user_fname
